<!--list of results-->
<ul>
	<% if @movies_with_posters %>
		<% @movies_with_posters.each do |movie|%>
			<div class="col-lg-4 col-md-4 col-sm-4">
			  <a href='/info/<%=movie["imdbID"]%>'>
			  	<div class="poster">
						<img src="<%= movie['Poster'] %>" class="img-responsive">
						<li>
							<%=movie["Title"]%> (<%=movie["Year"]%>)
						</li>
					</div>
				</a>
			</div>
		<% end %>
	<% else %>
	<div class="search_form">
		<p class="white"><I>Sorry, the film ferret came back empty handed. Try again!</I></p> 
		<br>
		<form method="get" action="/results">
			<input class="search_box" type="text" name="movie">
			<br>
			<input class="btn" type="submit">
		</form>
	</div>
	<% end %>
</ul>