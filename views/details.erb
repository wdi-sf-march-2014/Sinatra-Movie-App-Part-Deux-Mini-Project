<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 header">
	<h1><%= @title %></h1>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 header">
	<br>
	<form method='get' action='/results' class='form-inline' role='form'>
		  <input type='text' class='form-control' name='movie' placeholder='Movie Title'>
		  <button type='submit' class='btn btn-default'>Search</button>
	</form>
</div>

<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 left">
	<br>
	<img src='<%= @poster %>' />
</div>

<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 right">
	<h4><br>
	<strong>Plot:</strong> <%= @plot %> <br><br>
	<strong>Year:</strong> <%= @year %> <br><br>
	<strong>Rating:</strong> <%= @rating %> <br><br>
	<strong>Running Time:</strong> <%= @runtime %> <br><br>
	<strong>Genre:</strong> <%= @genre %> <br><br>
	<strong>Director:</strong> <%= @director %> <br><br>
	<strong>Actors:</strong> <%= @actors %> <br><br>
	<strong><a href='<%= @moreinfo %>' target='_blank'>More Info on IMDb</a></strong>
	</h4>
</div>
