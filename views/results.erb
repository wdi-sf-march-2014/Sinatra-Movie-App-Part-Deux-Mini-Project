<!-- list of movies returned by search -->
<% if @results == nil %>
	<p class="error">Error: Movie not found!</p> 
<% else %> 
	<% @results.each do |movie| %>
		<section class="list">
			<li>
				<a href='/detail/<%=movie["imdbID"]%>'><%=movie["Title"]%> - <%=movie["Year"]%></a>
			</li>
		</section>
	<% end %>
<% end %>